{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@nx/source"],
    "paths": {
      "@heizbox/types": ["./libs/types/src/index.ts"],
      "@heizbox/utils": ["./libs/utils/src/index.ts"]
      // oder wo auch immer dein types Package liegt
    }
  }
}
